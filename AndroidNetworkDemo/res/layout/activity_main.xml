<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.jskz.network.MainActivity" >

    <TextView
        android:id="@+id/aci_show_tv"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_alignLeft="@+id/aci_test_btn4"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="17dp" />

    <Button
        android:id="@+id/aci_test_btn1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/aci_hellowrold_tv"
        android:layout_below="@+id/aci_hellowrold_tv"
        android:text="HttpURLConnectionGet" />

    <TextView
        android:id="@+id/aci_hellowrold_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/aci_test_btn3"
        android:layout_alignParentTop="true"
        android:text="@string/hello_world" />

    <Button
        android:id="@+id/aci_test_btn2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/aci_test_btn1"
        android:layout_below="@+id/aci_test_btn1"
        android:text="HttpURLConnectionPost" />

    <Button
        android:id="@+id/aci_test_btn3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/aci_test_btn4"
        android:layout_below="@+id/aci_test_btn2"
        android:text="HttpClientGet" />

    <Button
        android:id="@+id/aci_test_btn4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/aci_test_btn3"
        android:text="HttpClientPost" />

    <Button
        android:id="@+id/aci_test_btn5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/aci_test_btn4"
        android:layout_below="@+id/aci_test_btn4"
        android:text="OkHttpGet" />

    <Button
        android:id="@+id/aci_test_btn6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/aci_test_btn5"
        android:layout_below="@+id/aci_test_btn5"
        android:text="OkHttpPost" />

</RelativeLayout>